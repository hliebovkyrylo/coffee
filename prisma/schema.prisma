generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Coffee {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  unitPurchasePrice Float
  unitSalePrice     Float
  quantity          Int
  netWeight         Float
}

model CoffeeType {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}
